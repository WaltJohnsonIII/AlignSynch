{
  "title": "Spec Kit Prompt Optimizer",
  "description": "Analyzes user prompts for Spec Kit workflow alignment and provides improvement suggestions",
  "version": "1.0.0",
  "commands": {
    "analyze": {
      "description": "Analyze a prompt and return score + suggestions",
      "usage": "goose prompt-optimizer analyze --prompt \"your prompt here\"",
      "arguments": {
        "prompt": {
          "type": "string",
          "required": true,
          "description": "The prompt text to analyze"
        }
      },
      "options": {
        "output": {
          "type": "string",
          "default": "text",
          "choices": ["text", "json"],
          "description": "Output format"
        }
      }
    }
  },
  "implementation": {
    "type": "script",
    "path": "prompt-optimizer.js"
  }
}
